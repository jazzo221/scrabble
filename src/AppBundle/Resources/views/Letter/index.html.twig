{% extends '@App/layout/layout.html.twig' %}

{% block content %}

    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="btn-group " role="group">
                <a href="{{ path('app_letter_new') }}" class="btn btn-sm btn-success">
                    Nová konfiguracia
                    <i class="glyphicon glyphicon-plus"></i>
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Názov</th>
                    <th>Nastavenia</th>
                    <th>Akcie</th>
                </tr>
                </thead>
                <tbody>
                {% for config in configurations %}
                        <td>{{ config.id }}</td>
                        <td>{{ config.name }}</td>
                        <td><p>{% for letter in config.letters %}{{ letter.render|raw }},{% endfor %}</p></td>
                        <td>
                            <a href="{{ path('app_letter_edit',{'configuration':config.id}) }}" class="btn btn-sm btn-default">
                                Upraviť
                                <i class="glyphicon glyphicon-pencil"></i>
                            </a>
                        </td>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}